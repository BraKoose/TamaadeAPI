# Production Environment Variables for Railway Deployment
# Copy these to Railway's environment variables section

# Django Settings
SECRET_KEY=your-super-secret-key-here
DEBUG=False
DJANGO_SETTINGS_MODULE=config.settings.production
ALLOWED_HOSTS=.railway.app

# Database (Railway will provide this automatically)
DATABASE_URL=postgresql://user:password@host:port/database

# Redis (Railway will provide this automatically)
REDIS_URL=redis://host:port/0
CELERY_BROKER_URL=${REDIS_URL}
REDIS_BACKEND=${REDIS_URL}

# Email Configuration
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Twilio (for SMS verification)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Stripe Payment
STRIPE_PUBLISHABLE_KEY=pk_live_your-publishable-key
STRIPE_SECRET_KEY=sk_live_your-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Domain Configuration
BACKEND_DOMAIN=https://your-app-name.railway.app
FRONTEND_DOMAIN=https://your-frontend-domain.com

# Payment URLs
PAYMENT_SUCCESS_URL=${FRONTEND_DOMAIN}/payment/success
PAYMENT_CANCEL_URL=${FRONTEND_DOMAIN}/payment/cancel
